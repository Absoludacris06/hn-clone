<% if @errors %>
  <% @errors.each do |error| %>
    <h5><%= error %></h5>
  <% end %>
<% end %>

<form id="login" method="post" action="/login">
  <h3>Login here:</h3>
  <input name="email" type="email" placeholder="email" />
  <input name="password" type="password" placeholder="password" />
  <input type="submit" value="Login">
</form>

<form id="create_user" method="post" action="/user/new">
  <h3>Create account:</h3>
  <input name="user[name]" type="text" placeholder="user name" />
  <input name="user[email]" type="email" placeholder="email" />
  <input name="user[password]" type="password" placeholder="password" />
  <input type="submit" value="Create Account">
</form>
